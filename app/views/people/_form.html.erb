<%= simple_form_for(@person, :html => { :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :birth_date, :as => :string %>
    <%= f.input :document %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
